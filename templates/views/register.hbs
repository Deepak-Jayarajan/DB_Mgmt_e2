<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Signup Page</title>
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">
    <link rel="stylesheet" href="css/login_regn.css">   
</head>
<body>
    <!-- Registration Form -->
    <div class="container">
        <div class="forms-signup">
            <div class="form ">
                <span class="title">Registration</span>

                <form action="/register" method="post">
                    <div class="input-field">
                        <input type="text" name="fullname" id="fullname" placeholder="Enter your name" required>
                        <i class="uil uil-user"></i>
                    </div>
                    <div class="input-field">
                        <input type="email" name="email" id="email" placeholder="Enter your e-mail" required>
                        <i class="uil uil-envelope icon"></i>
                    </div>
                    <div class="input-field">
                        <input type="password" name="password" id="password" class="password" placeholder="Create a password" required>
                        <i class="uil uil-lock icon"></i>
                    </div>
                    <div class="input-field">
                        <input type="password" name="confirmpassword" id="confirmpassword" class="password" placeholder="Confirm a password" required>
                        <i class="uil uil-lock icon"></i>
                        <i class="uil uil-eye-slash showHidePw"></i>
                    </div>

                    {{!-- <div class="checkbox-text">
                        <div class="checkbox-content">
                            <input type="checkbox" id="termCon">
                            <label for="termCon" class="text">I accepted all terms and conditions</label>
                        </div>
                    </div> --}}

                    <button class="input-field button" type="submit"> Register</button>
                </form>

                <div class="login-signup">
                    <span class="text">Already a member?
                        <a href="login">Login Now</a>
                    </span>
                </div>
            </div>
        </div>
    </div>

    <script src="js/login_regn.js"></script>
</body>
</html>

